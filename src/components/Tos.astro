---

import Layout from "src/layouts/Layout.astro";
import { getI18N } from "../../i18n/index";
const { currentLocale = 'en' } = Astro;
const i18n = getI18N(currentLocale);

const terms = [
	i18n.TOS_1,
	i18n.TOS_2,
	i18n.TOS_3,
	i18n.TOS_4,
	i18n.TOS_5
]
const detailsAndUse = [
	i18n.DETAILS_1,
	i18n.DETAILS_2,
	i18n.DETAILS_3,
	i18n.DETAILS_4,
	i18n.DETAILS_5,
	i18n.DETAILS_6,
	i18n.DETAILS_7
]
---

<Layout title={i18n.TOS_TITLE}>
	<section>
		<h2>{i18n.TOS_TITLE}</h2>
		<ul>
			{
				terms.map(term => {
					return (
						<li>{term}</li>
					)
				})
			}
		</ul>
	</section>
	<section>
		<h2>{i18n.DETAILS_TITLE}</h2>
		<ul>
			{
				detailsAndUse.map(details => {
					return (
						<li>{details}</li>
					)
				})
			}
		</ul>
	</section>
</Layout>

<style>
	section {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		margin: 2em;
		text-align: center;
	}

	ul {
		padding: 1em;
		color: var(--background-100);
		background-color: var(--background-950);
		border-radius: 20px;
	}

	li {
		list-style: disc;
		margin: 1em;
	}

	h2 {
		margin-bottom: 1em;
		color: var(--background-950);
		font-size: 2rem;

	}

	@media (width <= 700px) {
		section {
			margin: 1em;
		}

		li {
			font-size: 0.6rem;
			margin: 0.5em;
		}

		h2 {
			font-size: 1rem;
			margin-bottom: 0.5em;
		}
	}
</style>