---
import Layout from "src/layouts/Layout.astro";
import Prices from "src/components/Prices.astro";
import { example1, example2, example3, example4, example5, example6 } from "../assets/index.js";
import { getI18N } from "../../i18n/index";
const { currentLocale = 'en' } = Astro;
const i18n = getI18N(currentLocale);

const comms = [
	{
		title: i18n.COMMISIONS_SOFT_LINE,
		images: [
			{
				src: example1,
				alt: 'Hyeseo Redraw'
			},
			{
				src: example2,
				alt: 'Miku'
			}
		],
		prices: [
			{
				type: i18n.COMMISIONS_ICON,
				price: 5
			},
			{
				type: i18n.COMMISIONS_BUST,
				price: 10
			},
			{
				type: i18n.COMMISIONS_HALF_BODY,
				price: 17
			},
			{
				type: i18n.COMMISIONS_FULL_BODY,
				price: 25
			}
		],
		extraCharacterPrice: 40,
		maxExtraCharacters: 3,
		detailedDesign: 20
	},
	{
		title: i18n.COMMISIONS_HARD_LINE,
		images: [
			{
				src: example3,
				alt: 'Couple'
			},
			{
				src: example4,
				alt: 'Girl With Glasses'
			}
		],
		prices: [
			{
				type: i18n.COMMISIONS_ICON,
				price: 15
			},
			{
				type: i18n.COMMISIONS_BUST,
				price: 20
			},
			{
				type: i18n.COMMISIONS_HALF_BODY,
				price: 28
			},
			{
				type: i18n.COMMISIONS_FULL_BODY,
				price: 35
			}
		],
		extraCharacterPrice: 50,
		maxExtraCharacters: 3,
		detailedDesign: 20
	},
	{
		title: i18n.COMMISIONS_RENDERED,
		images: [
		{
				src: example5,
				alt: 'Farcille'
			},
			{
				src: example6,
				alt: 'Madohomu'
			}
		],
		prices: [
			{
				type: i18n.COMMISIONS_ICON,
				price: 10
			},
			{
				type: i18n.COMMISIONS_BUST,
				price: 17
			},
			{
				type: i18n.COMMISIONS_HALF_BODY,
				price: 25
			}
		],
		extraCharacterPrice: 50,
		maxExtraCharacters: 3,
		detailedDesign: 20
	}
]
---

<Layout title="Commisions">
	<div>
		{
			comms.map(comm => <Prices comm={comm}/>)
		}
		<div class="terms__button">
			<a href={currentLocale === 'en' ? '/tos' : '/es/tos'} set:html={i18n.TOS_TITLE_BUTTON}></a>
		</div>
	</div>
</Layout>

<style>
	div {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	div > .terms__button {
		display: flex;
		align-items: center;
		justify-content: center;
		width: fit-content;
		padding: 0.5em;
		background-color: var(--background-950);
		border-radius: var(--border-radius);
		border: 2px var(--background-100) solid;
		text-align: center;
		font-size: 0.8rem;
		color: var(--background-100);
		transition: all 0.3s ease;
		text-transform: uppercase;
	}

	div > .terms__button:hover {
		border: 2px var(--background-400) solid;
		color: var(--background-400);
		scale: 1.1;
	}

	@media (width <= 700px) {
		div > .terms__button {
			font-size: 0.5rem;
			border-radius: 10px;
		}
	}
</style>