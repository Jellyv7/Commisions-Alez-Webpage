<style>
	section {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 2em;
		gap: 2em;
	}

	img {
		width: 450px;
		margin-top: 50px;
		border-radius: 50%;
		border: var(--border-weight) var(--background-950) solid;
		aspect-ratio: 1 / 1;
	}

	section > div {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		width: 100%;
		gap: 1em;
	}

	section > div > div.title {
		display: flex;
		flex-direction: column;
	}

	section > div > div.title > h1 {
		font-size: 4rem;
		color: var(--background-100);
	}

	section > div > div.title > h2 {
		font-size: 0.7em;
		color: var(--background-950);
	}

	section > div > div {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}

	section > div > div > span {
		font-size: 1.2rem;
	}

	.summary {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		background-color: var(--background-100);
		border: var(--border-weight) var(--background-950) solid;
		border-radius: var(--border-radius);
		width: 100%;
		padding: 3em;
		font-size: 0.5rem;
		gap: 5em;
		color: var(--background-950);
		text-align: center;
	}

	@media (width <= 700px) {
		section {
			width: 100%;
			padding: 0.5em;
			padding-left: 1em;
			padding-right: 3em;
			gap: 3em;
		}

		section > div {
			width: 25em;
		}

		section > div > div.title > h1 {
			font-size: 2.5rem;
		}

		section > div > div.title > h2 {
			text-align: center;
			font-size: 0.35rem;
		}

		img {
			width: 400px;
			border: 2px var(--background-950) solid;
			margin-top: 15px;
		}

		.summary {
			padding: 0.5em 1em;
			gap: 1em;
			width: 120%;
			border: 2px var(--background-950) solid;
			border-radius: 10px;
		}

		section > div > div.summary > span {
			font-size: 0.5rem;
		}
	}

</style>