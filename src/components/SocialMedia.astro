---
import { Instagram, Twitter, YouTube, Kofi } from "@icons";
const SOCIAL_MEDIA = [
	{
		icon: Instagram,
		url: "https://www.instagram.com/alezsii_/",
		title: "Follow me on Instagram!",
	},
	{
		icon: Twitter,
		url: "https://twitter.com/alezsii",
		title: "Follow me on X!",
	},
	{
		icon: YouTube,
		url: "https://www.youtube.com/@alezsii_",
		title: "Subscribe to my YouTube channel!",
	},
	{
		icon: Kofi,
		url: "https://ko-fi.com/alezsii_",
		title: "Buy me a coffee!",
	},
];
---
<section>
	<div>
		<h1>Social<br>Media</h1>
		<ul>
			{
				SOCIAL_MEDIA.map(({ icon, url, title }) => {
					const Icon = icon;
					return (
						<li>
							<a href={url} title={title}>
								{Icon ? <Icon /> : null}
							</a>
						</li>
					);
				})
			}
		</ul>
	</div>
	<img src="/example1.webp" alt="Example Commision 1" />
</section>

<style>
	section {
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		width: 100%;
		padding: 0em 2em;
		gap: 3em;
	}

	div {
		display: flex;
		align-items: flex-start;
		justify-content: flex-start;
		flex-direction: column;
		gap: 1em;
	}

	img {
		width: 200px;
		border-radius: 20px;
	}

	section > div > h1 {
		font-size: 2.5rem;
		color: var(--background-100);
	}

	ul {
		display: flex;
		gap: 0.5em;
	}

	li > a {
		display: flex;
		padding: 0.6em;
		background-color: var(--background-200);
		border-radius: var(--border-radius);
		border: 2px transparent solid;
		color: var(--background-950);
		transition: all 0.3s ease;
	}

	li > a:hover {
		background-color: var(--background-700);
		border: 2px var(--background-100) solid;
		color: var(--background-100);
		scale: 1.1;
	}

	@media (width <= 700px) {
		section {
			padding: 0em 0.5em;
			gap: 1em;
		}

		img {
			width: 200px;
			border-radius: 10px;
		}

		section > div > h1 {
			font-size: 1rem;
		}

		section > div > ul {
			gap: 0.2em;
		}

		section > div > ul > li > a {
			padding: 0.2em;
			border-radius: 10px;
		}

		li > a > svg {
			width: 100px;
		}
	}
</style>
